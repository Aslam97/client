{
  "name": "ronin",
  "version": "4.0.10",
  "type": "module",
  "license": "Apache-2.0",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": "./dist/bin/index.js",
  "description": "Access the RONIN data platform via TypeScript.",
  "scripts": {
    "dev": "bun run build -- --watch",
    "build": "tsup",
    "test": "bun test",
    "lint": "bun run lint:tsc && bun run lint:eslint --",
    "lint:eslint": "eslint . --ext .ts --ignore-path .gitignore",
    "lint:tsc": "tsc",
    "prepare": "husky && bun run build",
    "prettify": "prettier --write --ignore-unknown \"**/*.{css,js,json,jsx,ts,tsx}\""
  },
  "files": [
    "dist"
  ],
  "repository": "ronin-co/client",
  "homepage": "https://ronin.co/docs/typescript-client",
  "keywords": [
    "ronin",
    "client",
    "database",
    "orm",
    "edge",
    "serverless"
  ],
  "lint-staged": {
    "**/*": [
      "prettier --ignore-unknown --write",
      "eslint --fix --ignore-path .gitignore"
    ]
  },
  "tsup": {
    "entry": [
      "src/index.ts",
      "src/bin/index.ts",
      "src/types/index.ts",
      "src/utils/index.ts"
    ],
    "format": "esm",
    "dts": true
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./types": {
      "import": "./dist/types/index.js",
      "types": "./dist/types/index.d.ts"
    },
    "./utils": {
      "import": "./dist/utils/index.js",
      "types": "./dist/utils/index.d.ts"
    }
  },
  "typesVersions": {
    "*": {
      "*": [
        "dist/index.d.ts"
      ],
      "types": [
        "dist/types/index.d.ts"
      ],
      "utils": [
        "dist/utils/index.d.ts"
      ]
    }
  },
  "engines": {
    "node": ">=18.17.0"
  },
  "dependencies": {
    "@iarna/toml": "2.2.5",
    "chalk-template": "1.1.0",
    "get-port": "7.1.0",
    "ini": "4.1.3",
    "json5": "2.2.3",
    "open": "10.1.0",
    "ora": "8.0.1"
  },
  "devDependencies": {
    "@types/bun": "1.1.4",
    "@types/ini": "4.1.1",
    "@typescript-eslint/eslint-plugin": "7.13.1",
    "@typescript-eslint/parser": "7.13.1",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-simple-import-sort": "12.1.0",
    "eslint-plugin-spellcheck": "0.0.20",
    "eslint-plugin-unused-imports": "4.0.0",
    "husky": "9.0.11",
    "lint-staged": "15.2.7",
    "prettier": "3.3.2",
    "tsup": "8.1.0",
    "typescript": "5.4.5"
  }
}
